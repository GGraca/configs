! BG -> #1E1E20
! FG -> #333745
! Text -> #DAEDE2
! C1 -> #77C4D3
! C2 -> #F6F792
! C3 -> #EA2E49

rofi.color-enabled: true
rofi.color-window: #1E1E20, #1E1E20, #333745
rofi.color-normal: #1E1E20, #77C4D3, #1E1E20, #333745, #77C4D3
rofi.color-active: #1E1E20, #F6F792, #1E1E20, #333745, #F6F792
rofi.color-urgent: #1E1E20, #EA2E49, #1E1E20, #333745, #EA2E49

rofi.opacity: 96
rofi.separator-style: solid
rofi.hide-scrollbar: true
rofi.scroll-method: 1


! Keyboard
rofi.kb-primary-paste: Control+v

rofi.kb-clear-line:                  Shift+Delete
rofi.kb-move-word-back:              Control+Left
rofi.kb-move-word-forward:           Control+Right
rofi.kb-move-front:                  Home
rofi.kb-move-end:                    End

rofi.kb-row-first:                   Control+Home,Control+KP_Home
rofi.kb-row-last:                    Control+End,Control+KP_End